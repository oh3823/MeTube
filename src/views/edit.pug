extends base.pug

block content
	h4 Update Video
	form(method="POST")
		input(name="title" placeholder="제목", value=video.title, required)
		input(placeholder="설명", required, type="text" name="description", minlength=20, value=video.description)
		input(placeholder=",로 구분된 해시태그", required, type="text" name="hashtags", value=video.hashtags.join())
		input(value="Save" type="submit")